{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": true,
    "declarationDir": "dist/types",
    "module": "commonjs",
    "target": "ES6",
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*",
    "./types/**/*"
  ],
  "types": [
    "node"
  ]
}